<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient_button">

        <androidx.cardview.widget.CardView
            android:id="@+id/card"
            android:layout_width="770dp"
            android:layout_height="640dp"
            android:layout_gravity="center|center_vertical"
            android:background="@color/main_background"
            android:shadowColor="@color/white"
            android:shadowRadius="24"
            app:cardCornerRadius="24dp"
            tools:ignore="MissingConstraints">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/icback"
                        android:layout_width="62dp"
                        android:layout_height="62dp"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:layout_marginLeft="16dp"
                        android:src="@drawable/ic_round_keyboard_backspace_24"
                        android:visibility="gone"

                        app:tint="@color/black" />

                    <TextView
                        android:id="@+id/txttitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center"
                        android:drawableLeft="@drawable/ic_baseline_settings_suggest_24"
                        android:drawablePadding="16dp"
                        android:gravity="center"
                        android:padding="12dp"
                        android:text="General Setup Questions"
                        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                        android:textColor="@color/black" />
                </RelativeLayout>


                <LinearLayout
                    android:id="@+id/llloyaltyreward"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:orientation="vertical"
                    tools:ignore="MissingConstraints">

                    <TextView
                        android:id="@+id/txttitle1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#102C55A7"
                        android:paddingLeft="16dp"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"
                        android:text="Loyalty Rewards"
                        android:layout_marginTop="12dp"
                        android:textSize="30sp"
                        android:textColor="@color/primary_dark" />

                    <TextView
                        android:id="@+id/txtloyaltyrewardname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="16dp"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp"
                        android:text=""
                        android:textColor="#129CCC"
                        android:textSize="28sp" />

                    <LinearLayout
                        android:id="@+id/llloyaltyrewardDetails"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:orientation="vertical"
                        tools:ignore="MissingConstraints">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"

                            android:gravity="center_vertical|center"
                            android:padding="7dp">

                            <TextView
                                android:id="@+id/txtloyaltyque1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="18dp"
                                android:layout_marginRight="4dp"
                                android:layout_weight="1"
                                android:drawableLeft="@drawable/ic_product_bullet"
                                android:drawablePadding="16dp"
                                android:drawableTint="#119CCC"
                                android:text="Allow loyalty customers to check their points?"
                                android:textColor="@color/black"
                                android:textSize="26sp" />


                            <androidx.appcompat.widget.SwitchCompat
                                android:id="@+id/switch1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="7dp"
                                android:layout_marginRight="24dp"
                                android:scaleX="2"

                                android:scaleY="2"
                                android:text=" "
                                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                                android:textOff=" "
                                android:textOn=" "></androidx.appcompat.widget.SwitchCompat>


                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/lljoinloyalty"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="32dp"
                            android:gravity="center_vertical|center"
                            android:padding="7dp"
                            android:visibility="gone">

                            <TextView
                                android:id="@+id/txtloyaltyque11"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="18dp"
                                android:layout_marginRight="4dp"
                                android:layout_weight="1"
                                android:drawableLeft="@drawable/ic_product_bullet"
                                android:drawablePadding="16dp"
                                android:drawableTint="#119CCC"
                                android:text="Allow customer to join loyalty program from kiosk?"
                                android:textColor="@color/black"
                                android:textSize="26sp" />


                            <androidx.appcompat.widget.SwitchCompat
                                android:id="@+id/switch1_1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="7dp"
                                android:layout_marginRight="24dp"
                                android:checked="true"
                                android:scaleX="2"
                                android:scaleY="2"
                                android:text=" "
                                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                                android:textOff=" "
                                android:textOn=" "></androidx.appcompat.widget.SwitchCompat>


                        </LinearLayout>


                        <View
                            android:layout_width="match_parent"
                            android:layout_height="3dp"
                            android:layout_marginLeft="27dp"
                            android:background="@color/gray_light"></View>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"

                            android:gravity="center_vertical|center"
                            android:padding="7dp">

                            <TextView
                                android:id="@+id/txtsubtitle"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="18dp"
                                android:layout_marginRight="4dp"
                                android:layout_weight="1"
                                android:drawableLeft="@drawable/ic_product_bullet"
                                android:drawablePadding="16dp"
                                android:drawableTint="#119CCC"
                                android:text="Allow customers with a mobile number, regardless if they are participating in the loyalty program, to view their five recent purchases?"
                                android:textColor="@color/black"
                                android:textSize="26sp" />

                            <androidx.appcompat.widget.SwitchCompat
                                android:id="@+id/switch2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="7dp"

                                android:layout_marginRight="24dp"
                                android:scaleX="2"

                                android:scaleY="2"
                                android:text=" "
                                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                                android:textOff=" "
                                android:textOn=" "></androidx.appcompat.widget.SwitchCompat>

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llcustomerauthentication"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:visibility="gone"
                    tools:ignore="MissingConstraints">

                    <TextView
                        android:id="@+id/txttitle2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#102C55A7"
                        android:paddingLeft="16dp"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"
                        android:text="Customer Authentication Option"
                        android:layout_marginTop="12dp"
                        android:textSize="30sp"
                        android:textColor="@color/hyperlink_color" />

                    <TextView
                        android:id="@+id/txtauthtitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="16dp"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:text=""
                        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                        android:textColor="@color/black" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="18dp"
                        android:gravity="center_vertical|center"
                        android:padding="7dp">

                        <TextView
                            android:id="@+id/authtitle2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="4dp"
                            android:layout_weight="1"
                            android:drawableLeft="@drawable/ic_product_bullet"
                            android:drawablePadding="16dp"
                            android:drawableTint="#119CCC"
                            android:text="Would you like the customer to receive a four-digit code first?"
                            android:textColor="@color/black"
                            android:textSize="26sp" />

                        <androidx.appcompat.widget.SwitchCompat
                            android:id="@+id/switch3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="7dp"

                            android:layout_marginRight="24dp"
                            android:scaleX="2"

                            android:scaleY="2"
                            android:text=" "
                            android:textAppearance="@style/TextAppearance.AppCompat.Small"
                            android:textOff=" "
                            android:textOn=" "></androidx.appcompat.widget.SwitchCompat>

                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llgiftcards"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"

                    android:layout_weight="1"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:visibility="gone"
                    tools:ignore="MissingConstraints">

                    <TextView
                        android:id="@+id/txttitle3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#102C55A7"
                        android:paddingLeft="16dp"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"
                        android:text="Gift Cards"
                        android:layout_marginTop="12dp"
                        android:textSize="30sp"
                        android:textColor="@color/hyperlink_color" />

                    <TextView
                        android:id="@+id/txtgiftcardnames"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="16dp"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp"
                        android:text=""
                        android:textColor="#129CCC"
                        android:textSize="28sp" />

                    <LinearLayout
                        android:id="@+id/llgiftcardsdetail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="18dp"
                        android:gravity="center_vertical|center"
                        android:padding="7dp">

                        <TextView
                            android:id="@+id/txtgiftcardq1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="4dp"
                            android:layout_weight="1"
                            android:drawableLeft="@drawable/ic_product_bullet"
                            android:drawablePadding="16dp"
                            android:drawableTint="#119CCC"
                            android:text="If you sell Gift Cards, would you like the ability to allow your customers to check the card balance at the Lightning Kiosk?"
                            android:textColor="@color/black"
                            android:textSize="26sp" />

                        <androidx.appcompat.widget.SwitchCompat
                            android:id="@+id/switch4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="7dp"

                            android:layout_marginRight="24dp"
                            android:scaleX="2"

                            android:scaleY="2"
                            android:text=" "
                            android:textAppearance="@style/TextAppearance.AppCompat.Small"
                            android:textOff=" "
                            android:textOn=" "></androidx.appcompat.widget.SwitchCompat>

                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llfoodpairing"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:visibility="gone"
                    tools:ignore="MissingConstraints">

                    <TextView
                        android:id="@+id/txttitle4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#102C55A7"
                        android:paddingLeft="16dp"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"
                        android:text="Food &amp; Wine"
                        android:layout_marginTop="12dp"
                        android:textSize="30sp"
                        android:textColor="@color/hyperlink_color" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="12dp"
                        android:gravity="center_vertical|center"
                        android:padding="7dp">

                        <TextView
                            android:id="@+id/txtfoodpair"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="18dp"
                            android:layout_marginRight="4dp"
                            android:layout_weight="1"
                            android:drawableLeft="@drawable/ic_product_bullet"
                            android:drawablePadding="16dp"
                            android:drawableTint="#119CCC"
                            android:text="Allow customers to check Food &amp; Wine?"
                            android:textColor="@color/black"
                            android:textSize="26sp" />


                        <androidx.appcompat.widget.SwitchCompat
                            android:id="@+id/switch5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="7dp"
                            android:layout_marginRight="24dp"
                            android:scaleX="2"

                            android:scaleY="2"
                            android:text=" "
                            android:textAppearance="@style/TextAppearance.AppCompat.Small"
                            android:textOff=" "
                            android:textOn=" "></androidx.appcompat.widget.SwitchCompat>


                    </LinearLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/textinput1"
                        style="@style/Widget.Design.TextInputLayout"
                        android:layout_width="650dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="24dp"
                        android:layout_marginRight="6dp"
                        android:backgroundTint="@color/gray_light"
                        android:drawableLeft="@drawable/ic_baseline_call_24"
                        android:drawableTint="@color/title_color"
                        android:visibility="gone"
                        app:boxBackgroundColor="@color/gray_light"
                        app:helperTextTextAppearance="@style/TextAppearance.AppCompat.Display1"
                        app:hintTextAppearance="@style/TextAppearance.AppCompat.Display1"
                        app:hintTextColor="@color/text_hint_color"
                        app:placeholderTextAppearance="@style/TextAppearance.AppCompat.Display1">

                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/edtwebsite"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left|center_vertical"
                            android:backgroundTint="@color/title_color"
                            android:gravity="left|center_vertical"
                            android:hint="Enter Default Pairing Site:"
                            android:inputType="text"
                            android:maxLines="1"
                            android:paddingTop="12dp"
                            android:privateImeOptions="nm"
                            android:singleLine="true"
                            android:text="https://www.palmandvine.com/kiosk"
                            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                            android:textColor="@color/primary_dark"
                            android:textColorHint="@color/text_hint_color" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="16dp"
                        android:background="@color/gray_light"></View>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical|center"
                        android:padding="7dp">

                        <TextView
                            android:id="@+id/txtdrinkreceipe"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="18dp"
                            android:layout_marginRight="4dp"
                            android:layout_weight="1"
                            android:drawableLeft="@drawable/ic_product_bullet"
                            android:drawablePadding="16dp"
                            android:drawableTint="#119CCC"
                            android:text="Allow customers to check drink receipes?"
                            android:textColor="@color/black"
                            android:textSize="26sp" />


                        <androidx.appcompat.widget.SwitchCompat
                            android:id="@+id/switch6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="7dp"
                            android:layout_marginRight="24dp"
                            android:scaleX="2"

                            android:scaleY="2"
                            android:text=" "
                            android:textAppearance="@style/TextAppearance.AppCompat.Small"
                            android:textOff=" "
                            android:textOn=" "></androidx.appcompat.widget.SwitchCompat>


                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llitemlookup"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:visibility="gone"
                    tools:ignore="MissingConstraints">

                    <TextView
                        android:id="@+id/txttitle5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#102C55A7"
                        android:paddingLeft="16dp"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"
                        android:text="Item Look-Up (Qty on Hand Handling)"
                        android:layout_marginTop="12dp"
                        android:textSize="30sp"
                        android:textColor="@color/hyperlink_color" />

                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="16dp"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:text="When a customer is searching the store's inventory items, how would you like to display items that are/are not in stock?"
                        android:textColor="@color/black"
                        android:textSize="26sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="18dp"
                        android:gravity="center_vertical|center"
                        android:padding="7dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="4dp"
                            android:layout_weight="1"
                            android:drawableLeft="@drawable/ic_product_bullet"
                            android:drawablePadding="16dp"
                            android:drawableTint="#119CCC"
                            android:text="Show all items regardless of stock status?"
                            android:textColor="@color/black"
                            android:textSize="26sp" />

                        <androidx.appcompat.widget.SwitchCompat
                            android:id="@+id/switch8"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="7dp"

                            android:layout_marginRight="24dp"
                            android:scaleX="2"

                            android:scaleY="2"
                            android:text=" "
                            android:textAppearance="@style/TextAppearance.AppCompat.Small"
                            android:textOff=" "
                            android:textOn=" "></androidx.appcompat.widget.SwitchCompat>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llshowdate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="46dp"
                        android:gravity="center_vertical|center"
                        android:padding="7dp"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="4dp"
                            android:layout_weight="1"
                            android:drawableLeft="@drawable/ic_product_bullet"
                            android:drawablePadding="16dp"
                            android:drawableTint="#119CCC"
                            android:text="If an item is out of stock, show the customer the expected date it is due into the store?"
                            android:textColor="@color/black"
                            android:textSize="26sp" />

                        <androidx.appcompat.widget.SwitchCompat
                            android:id="@+id/switch9"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="7dp"

                            android:layout_marginRight="24dp"
                            android:scaleX="2"

                            android:scaleY="2"
                            android:text=" "
                            android:textAppearance="@style/TextAppearance.AppCompat.Small"
                            android:textOff=" "
                            android:textOn=" "></androidx.appcompat.widget.SwitchCompat>

                    </LinearLayout>


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginTop="7dp"
                        android:layout_marginBottom="7dp"
                        android:background="@color/gray_light"></View>

                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="18dp"
                        android:gravity="center_vertical|center"
                        android:padding="7dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="4dp"
                            android:layout_weight="1"
                            android:drawableLeft="@drawable/ic_product_bullet"
                            android:drawablePadding="16dp"
                            android:drawableTint="#119CCC"
                            android:text="When the product details appear, would you like to show the Kiosk user 'Customers who bought this item also bought:'"
                            android:textColor="@color/black"
                            android:textSize="26sp" />

                        <androidx.appcompat.widget.SwitchCompat
                            android:id="@+id/switch10"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="7dp"

                            android:layout_marginRight="24dp"
                            android:scaleX="2"

                            android:scaleY="2"
                            android:text=" "
                            android:textAppearance="@style/TextAppearance.AppCompat.Small"
                            android:textOff=" "
                            android:textOn=" "></androidx.appcompat.widget.SwitchCompat>

                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginBottom="16dp"
                    android:gravity="right|center_vertical"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/txtlogoffnew"
                        android:layout_width="wrap_content"
                        android:layout_height="72dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:background="@drawable/rounded_border_setting"
                        android:drawableLeft="@drawable/ic_baseline_refresh_24"
                        android:drawableTint="#24A4D0"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:maxLines="1"
                        android:visibility="gone"
                        android:paddingLeft="12dp"
                        android:paddingRight="12dp"
                        android:text="Clear Store# &amp; Log Off"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large"
                        android:textColor="#24A4D0"></TextView>


                    <TextView
                        android:id="@+id/txtrefresh"
                        android:layout_width="wrap_content"
                        android:layout_height="72dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:background="@drawable/rounded_border_setting"
                        android:drawableLeft="@drawable/ic_baseline_refresh_24"
                        android:drawableTint="#24A4D0"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:maxLines="1"
                        android:paddingLeft="12dp"
                        android:paddingRight="12dp"
                        android:text="Adv Logs"
                        android:visibility="gone"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="#24A4D0"


                        ></TextView>

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnnext"
                        android:layout_width="wrap_content"
                        android:layout_height="72dp"
                        android:layout_gravity="right|center_vertical"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:background="@drawable/button_press_effect"
                        android:baselineAligned="false"
                        android:gravity="center|center_vertical"
                        android:paddingLeft="56dp"
                        android:paddingRight="56dp"
                        android:text="    Next    "
                        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                        android:textColor="@color/textcolorappear" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llpopup"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#99C0C0C0"
                android:gravity="center"
                android:padding="2dp"
                android:visibility="gone">

                <include
                    android:id="@+id/errorpopup"
                    layout="@layout/alert_popup"
                    android:background="@color/white"></include>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/llbottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_gravity="bottom"
            android:background="#EBEBEB"
            android:gravity="center|center_vertical"

            android:orientation="horizontal"
            android:padding="2dp">

            <TextView
                android:id="@+id/txtlogoff"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:text="Log Off"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:textColor="@color/hyperlink_color"
                android:textStyle="italic"></TextView>

            <TextView
                android:id="@+id/txtappname"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:text="Powered by Lightning Digital Marketing"
                android:textAppearance="@style/TextAppearance.AppCompat.SearchResult.Subtitle"
                android:textColor="@color/black"></TextView>

            <TextView
                android:id="@+id/txtversion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:layout_marginTop="3dp"
                android:layout_marginRight="12dp"
                android:layout_marginBottom="3dp"
                android:ellipsize="end"
                android:gravity="right|center_vertical"
                android:maxLines="1"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:text=""
                android:textAppearance="@style/TextAppearance.AppCompat.SearchResult.Subtitle"
                android:textColor="@color/black"></TextView>
        </LinearLayout>


    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>