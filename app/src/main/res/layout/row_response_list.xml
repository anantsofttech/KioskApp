<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="7dp"
    android:layout_marginBottom="2dp"
    android:orientation="horizontal">

    <View
        android:id="@+id/viewPass"
        android:layout_width="10dp"
        android:layout_height="match_parent"
        android:background="@drawable/rounded_corenr_button"

        ></View>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="4dp"
                android:layout_marginRight="16dp"
                android:maxLines="1"
                android:text="56565656"
                android:textColor="@color/title_color"
                android:textSize="28dp"
                 />

            <TextView
                android:id="@+id/tv_time_list"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginTop="4dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="10dp"
                android:maxLines="1"
                android:text="Ads Requested"
                android:textColor="@color/primary_dark"
                android:textSize="28dp"
                />

            <TextView
                android:id="@+id/tv_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="7dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/rounded_corenr_button_loyalty"
                android:backgroundTint="@color/green"
                android:maxLines="1"
                android:paddingLeft="12dp"
                android:paddingTop="4dp"
                android:paddingRight="12dp"
                android:paddingBottom="4dp"
                android:text="Failed"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="32dp"
                 />

        </LinearLayout>



        <TextView
            android:id="@+id/tv_response_vals"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="3dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="7dp"
            android:text="No adse retrived!"
            android:textColor="@android:color/black"
            android:textSize="30dp"
             />


        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="7dp"
            android:background="@color/gray_light"></View>
    </LinearLayout>

</LinearLayout>