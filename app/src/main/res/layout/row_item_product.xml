<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="left"
    android:gravity="left"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left|center_vertical"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="1dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="2dp"
        android:gravity="left|center_vertical"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_gravity="center_vertical"
            android:padding="4dp"
            android:background="@drawable/ic_product_bullet"></ImageView>

        <ImageView
            android:id="@+id/img1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_gravity="center_vertical"
            android:padding="4dp"
            android:background="@drawable/ic_product_bullet"
            android:backgroundTint="@color/clr_purchase"
            ></ImageView>
        <TextView
            android:id="@+id/tv_product_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:layout_marginLeft="8dp"
            android:layout_weight="1"
            android:gravity="left|center_vertical"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:text="Product 1 Product 1 Product 1Product 1Product 1Product 1 Product 1 Product 1"
            android:textSize="18sp"
            android:textColor="#111111" />


        <TextView
            android:id="@+id/tvQty"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="8dp"
            android:gravity="right|center_vertical"
            android:paddingTop="7dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:minWidth="50dp"
            android:paddingBottom="7dp"
            android:text="1"
            android:textSize="18sp"
            android:textColor="@color/black"
            />

    </LinearLayout>

</LinearLayout>