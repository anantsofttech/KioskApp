<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnrefresh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="4dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:drawableTop="@drawable/ic_baseline_cached_24"
                android:layout_marginRight="16dp"
                android:background="@drawable/gradient_itemlookup"
                android:text="Tap to Refresh Ads!"
                android:textSize="32sp"
                android:textColor="@color/white"></androidx.appcompat.widget.AppCompatButton>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvItemList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingBottom="2dp"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/row_response_list" />


        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnclose"
            android:layout_width="wrap_content"
            android:layout_height="68dp"
            android:layout_gravity="bottom|right"
            android:gravity="center"
            android:paddingLeft="46dp"
            android:drawableLeft="@drawable/ic_round_close_24"
            android:drawableTint="@color/white"
            android:layout_marginRight="-16dp"
            android:layout_marginBottom="32dp"
            android:background="@drawable/gradient_itemlookup"
            android:text="Close"
            android:textSize="32sp"
            android:paddingRight="32dp"
            android:textColor="@color/white"></androidx.appcompat.widget.AppCompatButton>
    </FrameLayout>
</layout>